<h1>Create a new event</h1>

<form action="/events" method="post">
  <label>Event Name:</label> <input type="text" name="name">
  <br />
  <label>Event Start Date:</label> <input type="text" name="start_date">
  <br />
  <label>Event Start Time:</label> <input type="text" name="start_time">
  <br />
  <label>Event End Date:</label> <input type="text" name="end_date">
  <br />
  <label>Event End Time:</label> <input type="text" name="end_time">
  <br />
  <label>Event Description:</label> <textarea name="description" rows="10" cols="30">Enter your description...</textarea>
  <br />
  <input type="submit" value="Create Event">
</form>
